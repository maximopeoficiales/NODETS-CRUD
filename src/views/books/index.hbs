<h1 class="text-center">My Books</h1>
{{#if books }}
<div class="row">
     {{#each books}}
     <div class="col-md-4">
          <div class="card card-body">
               <h3>{{title}}</h3>
               <p>{{author}}</p>
               <p>{{isbn}}</p>
               <a type="button" href="/books/{{_id}}" class="btn btn-primary btn-block my-2">Ver detalle </a>
               <form action="/books/remove" method="post" class="form-group">
                    <input type="hidden" name="id" value="{{_id}}">
                    <button type="submit" class="btn btn-danger btn-block">Eliminar</button>
               </form>
          </div>
     </div>
     {{/each}}
</div>
{{/if}}